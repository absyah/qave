<div class="row clearfix">
  <div class="col-sm-6 col-sm-offset-3">
    <h2><center>My Articles</center></h2>
    <% for (var x in articles) { %>
      <blockquote>
        <p>
          <%= articles[x].content %>
        </p> by <%= articles[x].owner.username %> <small> <%= articles[x].title %> <cite> @<%= articles[x].createdAt %></cite></small>
        <a href="/article/<%= articles[x].id %>" class='btn btn-default'>Show</a>
        <a href="/article/<%= articles[x].id%>/edit" class='btn btn-success'>Edit</a>
        <a href="/article/<%= articles[x].id %>" data-method="DELETE" class="delete-link btn btn-danger">Destroy</a>
      </blockquote>
    <% } %>
    <a href="/article/add" class="btn btn-primary pull-right">Add New</a>
  </div>
</div>