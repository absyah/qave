<div class="row clearfix">
  <div class="col-sm-6 col-sm-offset-3">
    <h2><center>My Articles</center></h2>
    <% _.each(articles, function(article){ %>
      <blockquote>
        <p>
          <%= article.content %>
        </p> by <%= article.owner.username %> <small> <%= article.title %> <cite> @<%= article.createdAt %></cite></small>
        <a href="/article/<%= article.id %>" class='btn btn-default'>Show</a>
        <% if(article.owner.id == session.user.id || session.user.admin) {%>
          <a href="/article/<%= article.id%>/edit" class='btn btn-success'>Edit</a>
          <a href="/article/<%= article.id %>" data-method="DELETE" class="delete-link btn btn-danger">Destroy</a>
        <% } %>
      </blockquote>
    <% }) %>
    <a href="/article/add" class="btn btn-primary pull-right">Add New</a>
  </div>
</div>